{% extends "wyshybackNavBundle::Layout.html.twig" %}

{% block menu %}
        <li class=""> <a href="javascript:;"> <i class="icon-custom-extra"></i> <span class="title">Medecin</span> <span class="arrow "></span> </a>
          <ul class="sub-menu">
            <li > <a href="{{path('tft_addMedecin')}}"> Ajouter </a> </li>
          </ul>
